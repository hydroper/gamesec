{
  "compilerOptions": {
    "lib": ["esnext", "DOM"],
    "types": [],
    "skipLibCheck": true,
    "strict": true,
    "downlevelIteration": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["ts/**/*.ts"],
  "exclude": ["node_modules"]
}